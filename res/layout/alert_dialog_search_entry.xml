<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView 
        android:id="@+id/online_username_view"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="6dip"
        android:layout_marginRight="6dip"
        android:text="@string/alert_dialog_name"
        android:gravity="left"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceMedium" />
            
    <EditText
        android:id="@+id/online_username_edit"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginLeft="6dip"
        android:layout_marginRight="6dip"
        android:scrollHorizontally="true"
        android:gravity="fill_horizontal"
        />

    <TextView
        android:id="@+id/online_search_department_view"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="6dip"
        android:layout_marginRight="6dip"
        android:text="@string/alert_dialog_department"
        android:gravity="left"
         android:textSize="18dp"
        android:textColor="#ffffff"
        />
            
    <Spinner
        android:id="@+id/online_department_search_spinner" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:layout_marginLeft="3dip"
        android:layout_marginRight="3dip"
        />
</LinearLayout>
